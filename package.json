{
  "name": "express-test",
  "author": {
    "name": "Vladimir Kogai",
    "email": "vkogai7@gmail.com"
  },
  "scripts": {
    "lint": "npx eslint",
    "start": "npx env-cmd -f .env npx webpack && node dist/index.js",
    "start:production": "npx env-cmd -f .env npx webpack --mode production && node dist/index.js",
    "start:serve": "npx env-cmd -f .env npx webpack serve --mode development",
    "coverage": "npx jest --coverage",
    "test": "npx jest",
    "build": "npx env-cmd -f .env webpack --mode production"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/eslintrc": "^3.1.0",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.4",
    "@types/nodemailer": "^6.4.16",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.1",
    "env-cmd": "^10.1.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "nodemailer": "^6.9.16",
    "paseto": "^3.1.4",
    "path": "^0.12.7",
    "pg": "^8.13.1",
    "postgres": "^3.4.5",
    "url": "^0.11.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+.tsx?$": [
        "ts-jest",
        {}
      ]
    },
    "name": "express-test",
    "jest": {
      "verbose": true
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageDirectory": "coverage"
  }
}
